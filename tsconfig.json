{  
  "compilerOptions": {  
    "target": "ESNext",                 
    "module": "ESNext",                 
    "moduleResolution": "Node",
    "rootDir": "./src",        
    "outDir": "./dist",                 
    "strict": true,                     
    "esModuleInterop": true,            
    "skipLibCheck": true,               
    "forceConsistentCasingInFileNames": true  
  },  
  "include": ["src/**/*.ts"],  
  "exclude": ["node_modules", "dist"]  
}